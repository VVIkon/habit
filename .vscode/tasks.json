{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start-frontend",
      "type": "shell",
      "command": "cd frontend && npm run serve",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Project is running at",
          "endsPattern": "Compiled successfully"
        }
      },
      "group": {
        "kind": "none",
        "isDefault": false
      }
    },
    {
      "label": "stop-frontend",
      "type": "shell",
      "command": "echo 'Stopping frontend...'",
      "group": {
        "kind": "none",
        "isDefault": false
      }
    },
    {
      "label": "install-dependencies",
      "type": "shell",
      "command": "npm run install:all",
      "group": {
        "kind": "none",
        "isDefault": false
      }
    }
  ]
}